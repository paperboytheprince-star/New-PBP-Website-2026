# Paperboy Prince - Bluehost Apache Configuration
# SPA routing + HTTPS redirect (proxy-safe)

RewriteEngine On

# Force HTTPS without loops (works even if Bluehost/proxy sets forwarded proto)
RewriteCond %{HTTPS} !=on
RewriteCond %{HTTP:X-Forwarded-Proto} !https
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Do not rewrite real files or directories (preserve /static and all assets)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# SPA fallback: send all other paths to index.html so /films etc work
RewriteRule ^ index.html [L]
